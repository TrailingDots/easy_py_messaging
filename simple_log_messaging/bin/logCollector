__version__="1.0.0"
import os, sys, argparse
os_path = os.path
import logging

try:
    import simple_log_messaging  #@UnusedImport
except:
    ### must be in dev mode then    
    this_dir = os_path.dirname(__file__)
    lib_path = os_path.abspath(os_path.join(this_dir, ".."))
    top_path = os_path.abspath(os_path.join(lib_path, ".."))
    sys.path.insert(0, lib_path)
    sys.path.insert(0, top_path)
    import simple_log_messaging 

########################################################################

DESC="simple_log_messaging - version %s" % __version__
DEFAULTS={
          }

def main():
    try:
        import logCollector 
        
        logCollector.main()

    except KeyboardInterrupt:
        logging.info("...exiting")
        sys.exit(0)
        
    except Exception, err:
        logging.error(str(err))
        sys.exit(1)

sys.exit(main())
